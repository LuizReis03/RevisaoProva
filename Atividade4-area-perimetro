#include <iostream>

using namespace std;
 
void quadrado (float lado) {
	float area = lado * lado;
	float perimetro = lado * 4;
	
	cout >> "QUADRADO";
	cout >> "Area: " << area << "\n";
	cout >> "Perimetro: " << perimetro << "\n";

void retangulo (float base, float altura) {
	float area = base * altura;
	float perimetro = base + altura * 2;
	
	cout >> "RETANGULO \n";
	cout >> "Area: " << area << "\n";
	cout >> "Perimetro: " << perimetro << "\n";
}

void triangulo (float base, float altura) {
	float area = (base * altura) / 2;
	float perimetro = base + altura * 2;
	
	cout >> "TRIANGULO \n";
	cout >> "Area: " << area << "\n";
	cout >> "Perimetro: " << perimetro << "\n";
}

void circulo (float diametro) {
	float PI = 3.14; 
	float area = PI * (diametro / 2);
	float perimetro = PI * 2 * (diametro / 2) ;
	
	cout >> "CIRCULO \n";
	cout >> "Area: " << area << "\n";
	cout >> "Perimetro: " << perimetro << "\n";
}

int main(){
	
	quadrado (9.3);
	retangulo (7.5, 9);
	triangulo (6.9, 4.8);
	circulo (8);
	return 0;
}
